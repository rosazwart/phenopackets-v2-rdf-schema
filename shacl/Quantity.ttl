@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix obo: <http://purl.obolibrary.org/obo/> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix : <https://phenopackets.org/> .

:QuantityShape
    a sh:NodeShape ;
    sh:targetClass :Quantity ;
    sh:property
        [
            sh:path sio:SIO_000074 ;
            sh:name "unit" ;
            sh:class :OntologyClass ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:description "The kind of unit." ;
        ],
        [
            sh:path sio:SIO_000300 ;
            sh:name "has_value" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:datatype xsd:double;
            sh:description "The value of the quantity in the units." ;
        ],
        [
            sh:path :reference_range ;
            sh:class :ReferenceRange ;
            sh:name "reference_range" ;
            sh:minCount 0 ;
            sh:maxCount 1 ;
            sh:description "The normal range for the value." ;
        ] ;
    sh:comment "Denote quantities of items such as medications." ;
.

:TypedQuantityShape
    a sh:NodeShape ;
    sh:targetClass :TypedQuantity ;
    sh:property
        [
            sh:path obo:NCIT_C25284 ;
            sh:class :OntologyClass ;
            sh:name "type" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:description "OntologyClass to describe the type of the measurement." ;
        ],
        [
            sh:path sio:SIO_000052 ;
            sh:class :Quantity ;
            sh:name "quantity" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:description "Quantity denoting the outcome of the measurement." ;
        ] ;
.