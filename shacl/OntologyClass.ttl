@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sio: <http://semanticscience.org/resource/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema> .
@prefix : <https://phenopackets.org> .

:OntologyClassShape
    a sh:NodeShape ;
    sh:targetClass :OntologyClass ;
    sh:property
        [
            sh:path sio:SIO_000115 ;
            sh:class :CURIEIdentifier ;
            sh:name "identifier" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:description "CURIE-style identifier." ;
        ],
        [
            sh:path sio:SIO_000179 ;
            sh:name "label" ;
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:datatype xsd:string ;
            sh:description "Human-readable class name." ;
        ] ;
.